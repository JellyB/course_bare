<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO" monitorInterval="60">
    <!-- -->
    <appenders>
        <RollingFile name="INF" fileName="${log_dir}/${server_name}_inf.log"
                     filePattern="${log_dir}/pack/agent_inf-%d{yyyy-MM-dd}.log.gz"
                     immediateFlush="false">
            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss} %clr{%5p}{magenta} %clr{[%15.15t]}{blue} %clr{%C.%M(%L)}{cyan} --> %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <DefaultRolloverStrategy max="30"></DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="ERR" fileName="${log_dir}/${server_name}_err.log"
                     filePattern="${log_dir}/pack/agent_err-%d{yyyy-MM-dd}.log.gz"
                     immediateFlush="false">
            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss} %clr{%5p}{magenta} %clr{[%15.15t]}{blue} %clr{%C.%M(%L)}{cyan} --> %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <DefaultRolloverStrategy max="30"></DefaultRolloverStrategy>
        </RollingFile>
    </appenders>
    <Loggers>
        <!-- 后期可以考虑把需要单独打印的如sql日志使用kakfa appender -->
        <Root level="INFO">
            <AppenderRef ref="INF"/>
            <AppenderRef ref="ERR"/>
        </Root>
        <Logger name="com.huatu.tiku.course.netschool.api" level="DEBUG" additivity="false" includeLocation="true">
            <AppenderRef ref="INF"/>
        </Logger>
    </Loggers>
</configuration>