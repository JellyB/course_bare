<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO" monitorInterval="60">
	<!-- -->
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout charset="UTF-8" pattern="%clr{%d{yyyy-MM-dd HH:mm:ss}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{[%15.15t]}{blue} %clr{%C.%M(%L)}{faint} --> %m%n" />
		</Console>
		<RollingFile name="INF" fileName="/var/log/agent/agent_inf.log" filePattern="/var/log/agent/$${date:yyyy-MM}/agent_inf-%d{MM-dd-yyyy}-%i.log.gz" immediateFlush="false">
			<PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C.%M(%L) --> %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="6" modulate="true"/>
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
		</RollingFile>
		<RollingFile name="ERR" fileName="/var/log/agent/agent_err.log" filePattern="/var/log/agent/$${date:yyyy-MM}/agent_err-%d{MM-dd-yyyy}-%i.log.gz" immediateFlush="false">
			<PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t] %C.%M(%L) --> %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="6" modulate="true"/>
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
		</RollingFile>
	</appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="cn.jxt" level="INFO">
			<AppenderRef ref="INF" />
			<AppenderRef ref="ERR" />
		</Logger>
		<Logger name="druid.sql.Statement" level="INFO" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
	</Loggers>
</configuration>